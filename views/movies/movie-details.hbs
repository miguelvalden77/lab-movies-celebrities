<h2>Movie details</h2>

<h3>{{movie.title}}</h3>
<p>{{movie.genre}}</p>
<p>{{movie.plot}}</p>

{{#each movie.cast}}
    <li>{{this.name}}</li>
    <p>{{this.occupation}}</p>
    <p>{{this.catchParse}}</p>
{{/each}}

<form action="/movies/{{movie._id}}/delete" method="post">
    <button>Delete</button>
</form>
<form action="/movies/{{movie._id}}/edit">
    <button>Update</button>
</form>
