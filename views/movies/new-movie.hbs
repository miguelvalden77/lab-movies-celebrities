<h2>New movie</h2>

<form action="/movies/create" method="post">

    <label>Title
        <input type="text" name="title">
    </label>

    <label>Genre
        <input type="text" name="genre">
    </label>

    <label>Plot
        <input type="text" name="plot">
    </label>

    <label>Cast 
        <select name="cast" multiple>
            
            {{#each celebrityName}}
                <option value="{{this._id}}">{{this.name}}</option>
            {{/each}}

        </select>
    </label>

    <button>Create</button>

</form>
